# Grain SaaS Automation Suite - Environment Variables Template
# Copy this file to .env and fill in your API keys
# NEVER commit .env file to git!

# ===========================================
# AI & LLM APIs
# ===========================================

# OpenRouter - Multi-model AI Gateway (Required for most workflows)
# Get your key: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# OpenAI - For GPT-4 models
# Get your key: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-key-here

# Anthropic - For Claude models
# Get your key: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-key-here

# ===========================================
# Voice AI
# ===========================================

# ElevenLabs - Voice AI & Conversational AI
# Get your key: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=your-elevenlabs-key-here
ELEVENLABS_AGENT_ID=your-agent-id-here

# ===========================================
# Communication
# ===========================================

# WhatsApp Business API (Meta)
# Get from: https://developers.facebook.com/
WHATSAPP_ACCESS_TOKEN=your-whatsapp-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id

# Slack
# Create app: https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-slack-token
SLACK_SIGNING_SECRET=your-signing-secret

# ===========================================
# Search & Scraping
# ===========================================

# SerpAPI - Google Search Results
# Get your key: https://serpapi.com/dashboard
SERPAPI_API_KEY=your-serpapi-key

# Firecrawl - Web Scraping
# Get your key: https://firecrawl.dev/
FIRECRAWL_API_KEY=your-firecrawl-key

# ScrapeNinja - Smart Crawling
# Get your key: https://scrapeninja.net/
SCRAPENINJA_API_KEY=your-scrapeninja-key

# ===========================================
# Google APIs
# ===========================================

# Google Places API (for GBP workflows)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_PLACES_API_KEY=your-google-places-key

# Google Search Console
# OAuth configured in n8n credentials

# ===========================================
# Analytics & Marketing
# ===========================================

# Meta Ads
META_ADS_ACCESS_TOKEN=your-meta-ads-token

# Google Ads
GOOGLE_ADS_DEVELOPER_TOKEN=your-google-ads-token

# ===========================================
# CRM & Business
# ===========================================

# HubSpot
HUBSPOT_API_KEY=your-hubspot-key

# Calendly (for appointment booking)
CALENDLY_API_KEY=your-calendly-key

# ===========================================
# Database
# ===========================================

# PostgreSQL (for n8n and data storage)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=grain_saas
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# ===========================================
# n8n Configuration
# ===========================================

N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_ENCRYPTION_KEY=your-encryption-key

# n8n MCP Server (for Claude Code integration)
N8N_MCP_ENABLED=true

# ===========================================
# Business Configuration
# ===========================================

BUSINESS_ID=your-business-id
BUSINESS_NAME=Your Business Name
BUSINESS_PHONE=+90 XXX XXX XX XX
BUSINESS_EMAIL=contact@yourbusiness.com
GOOGLE_PLACE_ID=ChIJ-your-place-id
GOOGLE_REVIEW_LINK=https://g.page/r/YOUR-ID/review

