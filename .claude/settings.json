    "document_skills": [
      "pdf",
      "docx",
      "pptx",
      "xlsx"
    ],
    "lsp_plugins": [
      "typescript-lsp",
      "pyright-lsp"
    ],
    "install_commands": [
      "/plugin install code-simplifier@claude-plugin-directory",
      "/plugin install code-review@claude-plugin-directory",
      "/plugin install frontend-design@claude-plugin-directory",
      "/plugin install commit-commands@claude-plugin-directory",
      "/plugin install security-guidance@claude-plugin-directory",
      "/plugin install document-skills@anthropic-agent-skills"
    ]
  },
  "permissions": {
    "allow": [
      "Read(n8n-templates/**)",
      "Read(index.json)",
      "Read(.claude/**)",
      "Glob(**/*.json)",
      "Grep(**)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(jq:*)"
    ],
    "ask": [
      "Write(n8n-templates/**)",
      "Edit(n8n-templates/**)",
      "Edit(index.json)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)"
    ],
    "deny": [
      "Read(.env*)",
      "Read(**/credentials*)",
      "Read(**/secrets*)",
      "Bash(rm -rf:*)",
      "Bash(curl:*POST*)",
      "Bash(wget:*)"
    ]
  },
  "preferences": {
    "output_style": "explanatory",
    "language": "turkish",
    "commit_style": "conventional"
  }
}
